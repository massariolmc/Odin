

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t(".title")%>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#home" data-toggle="tab">Todas as Cautelas</a>
          </li>
          <li><a href="#profile" data-toggle="tab">Cautela Finalizada</a>
          </li>
          <li><a href="#messages" data-toggle="tab">Cautela Aprovada/Pendente</a>
          </li>
          <li><a href="#settings" data-toggle="tab">Cautela Inativa</a>
          </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane fade in active" id="home">
            <h4></h4>
            <%= render partial: "index_todas_cautelas", locals:{loans: @loans} %>
          </div>
          <div class="tab-pane fade" id="profile">
            <h4>P</h4>
            <%= render partial: "index_cautelas_finalizadas", locals:{loans: @loans_fin} %>
          </div>
          <div class="tab-pane fade" id="messages">
            <h4></h4>
            <%= render partial: "index_cautelas_pendentes", locals:{loans: @loans_pend} %>
          </div>
          <div class="tab-pane fade" id="settings">
            <h4></h4>
            <%= render partial: "index_cautelas_inativas", locals:{loans: @loans_inat} %>
          </div>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
<%= link_to t('links.new'), new_loan_path %>