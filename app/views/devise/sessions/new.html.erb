<% i = 0%>
    <% unless flash.empty? %>
     <script type="text/javascript">
          <% flash.each do |f| %>
          <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'success') %>
             toastr['<%= type %>']('<%= f[1] %>');
       <% end %>
     </script>
 <% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
<%#= form_for(:user, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading"> 

          <div>
            <div class="col-md-4" ><h3 class="panel-title"> <%= image_tag('gladio.png', size: "60x55")%> </h3></div>        
            <div class="col-md-4" > </div>  
            <div class="col-md-4"><h3 class="panel-title"> <%= image_tag('brasao_gapcg.png', size: "70x55") %> </h3></div>
            
          </div>
          <div> <h3 class="panel-title"><%= t('.title')%></h3></div>
          
        </div>

        <div class="panel-body">
          <form role="form">
            <fieldset>
              <div class="form-group">
               <%= f.label :username, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                <%= f.text_field :username, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>                                
            <!-- Change this to a button or input when using this as a form -->
            <div class="actions">
             <%= f.submit t("links.btn"), class: "btn btn-lg btn-success btn-block" %>
           </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
</div>


<% end %>

